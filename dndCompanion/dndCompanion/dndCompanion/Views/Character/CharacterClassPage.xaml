<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dndCompanion.Views.Character.CharacterClassPage"
             xmlns:viewModel="clr-namespace:dndCompanion.ViewModels.Character"
             Title="{Binding CharacterClassName}">
    <ContentPage.Content>
        <StackLayout x:DataType="viewModel:CharacterClassViewModel">
            <Label Text="{Binding Class.Name}" FontSize="Large" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>