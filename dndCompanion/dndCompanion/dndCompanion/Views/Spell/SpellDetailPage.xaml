<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dndCompanion.Views.Spell.SpellDetailPage"
             xmlns:viewModel="clr-namespace:dndCompanion.ViewModels.Spell"
             Title="{Binding SpellName}">

    <StackLayout Spacing="20" Padding="15" x:DataType="viewModel:SpellDetailViewModel">
        <Label Text="Name:" FontSize="Medium" />
        <Label Text="{Binding Spell.Name}" FontSize="Small"/>
        <Label Text="Description:" FontSize="Medium" />
        <Label Text="{Binding Spell.Description}" FontSize="Small"/>
        <Label Text="Components:" FontSize="Medium" />
        <Label Text="{Binding Spell.Components.Material, StringFormat='Material:{}{0}'}" FontSize="Small"/>
        <Label Text="{Binding ClassNames}" FontSize="Small"/>
    </StackLayout>
</ContentPage>